@model reviewsite.Model.Product
@addTagHelper *, Microsoft.AspNetCore.MVC.TagHelpers 



@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/CSS/StyleSheet.css">
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <header>
        <h1>@Model.Name </h1>
        <section id="offWhite">
            <span><strong>@Model.Name</strong></span>
        </section>
    </header>
    <main>
        <section id="airMax">
            <img src="~/images/@Model.Image" alt="Alternate Text" />
            <p></p>
            <ul>
                <li>@Model.Category.Name</li>
                <li>@Model.Description</li>
            </ul>
            <hr />
            <h2>Review List</h2>
            @foreach (var review in Model.Reviews)
            {
                @review.Content
                <a href="/Review/Edit/@review.ReviewId">Edit Review</a>
                <a href="/Review/Delete/@review.ReviewId">Delete this Review</a>
                <hr />
            }
        </section>
        <a href="~/Review/Create/@Model.Id">Add a Review</a>
        <a href="~/Category/Details/@Model.Category.Id">Return to Previous Menu</a>
    </main>
</body>
</html>
